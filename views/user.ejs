<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Semester Timetable</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Semester Timetable</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label for="semesterSelect" class="form-label">Select Semester:</label>
                            <select class="form-select" id="semesterSelect">
                                <option value="">Choose semester...</option>
                                <option value="sem1">Semester 1</option>
                                <option value="sem2">Semester 2</option>
                                <option value="sem3">Semester 3</option>
                                <option value="sem4">Semester 4</option>
                            </select>
                        </div>

                        <!-- Timetables (Initially Hidden) -->
                        <div class="timetable-container">
                            <!-- Semester 1 Timetable -->
                            <div id="sem1" class="timetable d-none">
                                <h4 class="mb-3">Semester 1 Timetable</h4>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Time</th>
                                                <th>Monday</th>
                                                <th>Tuesday</th>
                                                <th>Wednesday</th>
                                                <th>Thursday</th>
                                                <th>Friday</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>9:00 - 10:00</td>
                                                <td>Mathematics</td>
                                                <td>Physics</td>
                                                <td>Chemistry</td>
                                                <td>English</td>
                                                <td>Computer</td>
                                            </tr>
                                            <tr>
                                                <td>10:00 - 11:00</td>
                                                <td>Physics</td>
                                                <td>Chemistry</td>
                                                <td>Mathematics</td>
                                                <td>Computer</td>
                                                <td>English</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Semester 2 Timetable -->
                            <div id="sem2" class="timetable d-none">
                                <h4 class="mb-3">Semester 2 Timetable</h4>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Time</th>
                                                <th>Monday</th>
                                                <th>Tuesday</th>
                                                <th>Wednesday</th>
                                                <th>Thursday</th>
                                                <th>Friday</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>9:00 - 10:00</td>
                                                <td>Database</td>
                                                <td>Networks</td>
                                                <td>Java</td>
                                                <td>Python</td>
                                                <td>Web Dev</td>
                                            </tr>
                                            <tr>
                                                <td>10:00 - 11:00</td>
                                                <td>Networks</td>
                                                <td>Java</td>
                                                <td>Python</td>
                                                <td>Web Dev</td>
                                                <td>Database</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Add more semesters similarly -->
                            <div id="sem3" class="timetable d-none">
                                <h4 class="mb-3">Semester 3 Timetable</h4>
                                <div class="alert alert-info">
                                    Loading timetable for Semester 3...
                                </div>
                            </div>

                            <div id="sem4" class="timetable d-none">
                                <h4 class="mb-3">Semester 4 Timetable</h4>
                                <div class="alert alert-info">
                                    Loading timetable for Semester 4...
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('semesterSelect').addEventListener('change', function () {
            // Hide all timetables
            document.querySelectorAll('.timetable').forEach(table => {
                table.classList.add('d-none');
            });

            // Show selected timetable
            const selectedValue = this.value;
            if (selectedValue) {
                document.getElementById(selectedValue).classList.remove('d-none');
            }
        });

