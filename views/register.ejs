<body class="d-flex align-items-center py-4 bg-body-tertiary" data-bs-theme="light">
    <!--main from body -->
    <main class="form-signin w-100 m-auto">
        <form action="/register" method="post">
            <!-- <img class="mb-4" src="" alt="" width="80" height="80"> -->
            <h1 class="h3 mb-3 fw-normal">Sign Up</h1>
            <h6 class="mb-3 fw-normal">Please enter details to register.</h6>

            <div class="form-floating">
                <input type="email" class="form-control" name="username" id="floatingInput" placeholder="Email Address"
                    required>
                <label for="floatingInput">Email Address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" name="password" id="floatingPassword"
                    placeholder="Password: 8 min character" required pattern=".{8}" title="8 Minimum Character">
                <label for="floatingPassword">Password (Minimum character: 8)</label>
            </div>

            <div class="rounded border border-tertiary p-2 d-flex justify-content-center">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="userRole" id="inlineRadio1" value="user" checked>
                    <label class="form-check-label" for="inlineRadio1">User</label>
                </div>
                <!-- <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="userRole" id="inlineRadio2" value="admin">
                    <label class="form-check-label" for="inlineRadio2">Admin</label>
                </div> -->
            </div>

            <div class="btn-group w-100 mt-3" role="group" aria-label="Basic example">
                <!-- <a href="/login" class="btn btn-primary w-50 py-2 me-2 br-2 rounded">Login</a> -->
                <button class="btn btn-dark w-50 py-2 rounded" type="submit">Sign Up</button>
            </div>

            <p class="mt-4 text-body-secondary">Already have an account? <a href="/login">Login</a></p>
            <p class="mt-4 mb-4 text-body-secondary">&copy; 2024- Reserved by GoG</p>
        </form>
